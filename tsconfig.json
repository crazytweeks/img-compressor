{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,

    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "rootDir": "./src"
  },

  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
